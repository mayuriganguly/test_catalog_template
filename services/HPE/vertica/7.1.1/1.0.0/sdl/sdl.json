{
    "name": "vertica",
    "product_version": "7.1.1",
    "sdl_version": "1.0.0",
    "vendor": "HPE",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "vertica-server",
            "version": "7.1.1",
            "vendor": "HPE",
            "image": "sumitchawla/vertica",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "vertica",
                "bigdata"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "vsql",
                    "protocol": "TCP",
                    "source_port": 5433,
                    "target_port": 5433,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/home/dbadmin/docker"
                }
            ]
        },
        {
            "name": "hsm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "image": "docker-registry.helion.space:443/hsm-sidecar/sidecar:latest",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "vertica",
                "hsm-sidecar"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "sidecar-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": false
                }
            ],
            "parameters": [
                {
                    "name": "SIDECAR_API_KEY"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "SIDECAR_API_KEY",
            "description": "HSM side-car api key",
            "default": "sidecar-auth-token",
            "example": "sidecar-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
