{
  "name": "dev-postgres",
  "product_version": "9.4.0",
  "sdl_version": "1.0.0",
  "vendor": "HPE",
  "volumes": [{
 		"name": "dev-postgres-volume",
 		"size_gb": 1,
 		"filesystem": "ext4",
 		"shared": false
 	}],
  "components": [
    {
      "name": "postgres",
      "workload_type": "container",
      "version": "latest",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/hsm-sidecar/sidecar-dev-postgres-db:latest",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["postgres"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "pgsql",
          "protocol": "TCP",
          "source_port": 5432,
          "target_port": 5432,
          "public": false
        }
      ],
      "volume_mounts": [{
 			"volume_name": "dev-postgres-volume",
 			"mountpoint": "/var/lib/postgresql/data"
 		}],
      "parameters": [
        {
          "name": "POSTGRES_PASSWORD"
        }]
    },
    {
      "name": "hsm-side-car",
      "workload_type": "container",
      "version": "latest",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/hsm-sidecar/sidecar-dev-postgres:latest",
      "min_RAM_mb": 50,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["postgres-sidecar"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "pgsql-sidecar",
          "protocol": "TCP",
          "source_port": 8081,
          "target_port": 8081,
          "public": false
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "SERVICE_POSTGRES_DBNAME"
        },
        {
          "name": "SERVICE_POSTGRES_USER"
        },
        {
          "name": "POSTGRES_PASSWORD"
        },
        {
          "name": "SERVICE_POSTGRES_SSLMODE"
        },
        {
          "name": "SIDECAR_API_KEY"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "SERVICE_POSTGRES_USER",
      "description": "Postgres user used by the sidecar",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "SERVICE_POSTGRES_DBNAME",
      "description": "Postgres database name",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "SERVICE_POSTGRES_SSLMODE",
      "description": "Postgres port the sidecar will connect to",
      "example": "disable",
      "required": true,
      "secret": false,
      "default": "disable"
    },
    {
      "name": "SIDECAR_API_KEY",
      "description": "API Key used to authenticate consumers of the sidecar API",
      "example": "my-secret-key",
      "required": true,
      "secret": false
    },
    {
      "name": "POSTGRES_PASSWORD",
      "description": "Postgres password used by the server",
      "example": "changeme",
      "required": true,
      "secret": false,
      "generator":
        {
          "id": "POSTGRES_PASSWORD",
          "generate":
            {
              "type": "Password",
              "characters": "abcdefghijklmnopqrstuvwxyz1234567890"
            }
        }
    }
  ]
}
